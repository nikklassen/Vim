[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = diffconflicts $EDITOR $BASE $LOCAL $REMOTE $MERGED
[mergetool]
	diffconflictstrustExitCode = true
	keepBackup = false
[push]
	default = upstream
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore_global
[alias]
	and-this = commit --amend --no-edit
[rebase]
	autoStash = true
[pull]
	rebase = true
